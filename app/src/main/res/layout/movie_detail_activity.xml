<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="movieDetail"
                type="edmundo.tmdb.model.MovieDetail" />
    </data>

    <ScrollView
            android:id="@+id/rootMovieDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/clRootMovieDetailt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FFF">


            <android.support.constraint.ConstraintLayout
                    android:id="@+id/clHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/ivMoviePoster"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        android:transitionName="movieImage"
                        app:backgroundImage="@{movieDetail.poster_path}"
                        app:layout_constraintBottom_toTopOf="@+id/tvMovieOverview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/movie_title_shadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/ivMoviePoster" />

                <TextView
                        android:id="@+id/tvMovieReleaseDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:textSize="15sp"
                        tools:text="Lancamento: 20/01.2020"
                        app:returnReleaseDate="@{movieDetail.release_date}"
                        android:textColor="#FFF"
                        android:transitionName="movieReleaseDate"
                        android:lineSpacingExtra="3sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
                        app:layout_constraintStart_toStartOf="@+id/ivMoviePoster"/>

                <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="24dp"
                        android:lineSpacingExtra="4sp"
                        android:textColor="#FFF"
                        android:textSize="22sp"
                        android:text="@{movieDetail.title}"
                        android:transitionName="movieTitle"
                        app:layout_constraintBottom_toBottomOf="@+id/ivMoviePoster"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/ivMoviePoster"
                        tools:text="Vingadores Ultimato" />

                <TextView
                        android:id="@+id/tvMovieOverview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:lineSpacingExtra="3sp"
                        android:textAlignment="textStart"
                        android:textColor="#3e5161"
                        android:textSize="15sp"
                        android:text="@{movieDetail.overview}"
                        app:layout_constraintBottom_toTopOf="@id/tvMovieGenres"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivMoviePoster"
                        tools:text="Um filme dos vingadores" />

                <TextView
                        android:id="@+id/tvMovieGenres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:lineSpacingExtra="3sp"
                        android:textAlignment="textStart"
                        android:textColor="#3e5161"
                        android:textSize="15sp"
                        android:text="GÃªnero:"
                        app:layout_constraintBottom_toTopOf="@id/tvMovieGenresDetail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMovieOverview" />

                <TextView
                        android:id="@+id/tvMovieGenresDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:lineSpacingExtra="3sp"
                        android:textAlignment="textStart"
                        android:textColor="#3e5161"
                        android:textSize="15sp"
                        app:setGenres="@{movieDetail.genres}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMovieGenres" />


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>