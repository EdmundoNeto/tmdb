<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>

        <variable
                name="movieItem"
                type="edmundo.tmdb.model.Result"/>

    </data>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/rootMatchItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cvMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/ivBackGround"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        android:transitionName="movieImage"
                        app:backgroundImage="@{movieItem.poster_path}"
                        app:layout_constraintBottom_toTopOf="@+id/tvReleaseDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/movie_title_shadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/ivBackGround" />

                <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="8dp"
                        android:lineSpacingExtra="3sp"
                        android:textColor="#FFFF"
                        android:textSize="17sp"
                        android:text="@{movieItem.title}"
                        android:transitionName="movieTitle"
                        app:layout_constraintBottom_toBottomOf="@+id/ivBackGround"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/ivBackGround"
                        tools:text="Vingadores Ultimato" />


                <TextView
                        android:id="@+id/tvReleaseDate"
                        tools:text="LanÃ§amento: 01/01.2010"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp"
                        android:lineSpacingExtra="3sp"
                        android:textAlignment="textStart"
                        android:textColor="#737e86"
                        android:textSize="15sp"
                        app:returnReleaseDate="@{movieItem.release_date}"
                        android:transitionName="movieReleaseDate"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivBackGround"
                />


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>



    </android.support.constraint.ConstraintLayout>
</layout>